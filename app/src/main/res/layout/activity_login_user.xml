<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.LoginUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_Btn"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:drawableBottom="?attr/actionModeCloseDrawable"
            android:onClick="backbtn"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginTop="50dp"
            android:contentDescription="TODO"
            android:transitionName="logo_image"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="-40dp"
            android:fontFamily="@font/rubik_mono_one"
            android:text="VehiDocs"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:transitionName="logo_text" />

        <TextView
            android:id="@+id/textQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/textQuote"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:transitionName="logo_quote" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobileNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Mobile Number"
                app:prefixText="+977">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="#455A64" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/loginNext_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/primaryColor"
                android:fontFamily="@font/rubik_mono_one"
                android:onClick="NextPage"
                android:text="Next"
                android:textColor="@color/background"
                android:textSize="16sp"
                app:backgroundTint="@color/primaryColor"
                tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>